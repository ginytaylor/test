        <div class="Form__Hint Form__Hint--center">
          <span class="Text--subdued">{% comment %}ly_i18n_replace_for_[ 'customer.login.register_label' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.login.register_label' | t }}{% endcapture %}{% include 'ly-static-string' with '16346951' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
