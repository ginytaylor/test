<div class="block-radical block-radical-yarn block-title-fixed">
  <div class="page-width">
    {% capture blockTitle %}
    {% if section.settings.title != blank %}
     
    <div class="title-scroll">
      <h2 class="h1">
        <div>
          {{ section.settings.title }}
        </div>
      </h2>
      {% if section.settings.sub_title != blank %}
      <h2 class="h1">
          <div><span>{{section.settings.sub_title}}</span></div>
      </h2>
      {% endif %}
    </div>
    {% endif %}
    {% endcapture %}
    <div class="block-title-back">
      {{ blockTitle }}
    </div>
    <div>
      {{ blockTitle }}
    </div>
<!--
    <div class="block-title-mask">
      {{ blockTitle }}
    </div>
-->
    {% if section.blocks.size > 0 %}
    <div class="block-radical-items ">
      <div class="grid">
      <div class="item grid__item col-2 col-md-2 hide-mobile">&nbsp;</div>
      {% for block in section.blocks %}
      <div class="item grid__item col-3 col-md-2 col-small-5 slide-up">
          {% if block.settings.banner != blank %}
          <div class="img-banner">
            {% if block.settings.link != blank %}<a href="block.settings.link">{% endif %}
              <img  class="lazyload" data-src="{{ block.settings.banner | img_url:'317x316' }}" src="{{ block.settings.banner | img_url:'2x' }}" alt="{{ block.settings.banner.alt }}">
              <span class="icon-Sustainability_icons_outlined_{{ block.settings.icons }} planet-icon"></span>
            {% if block.settings.link != blank %}</a>{% endif %}

          </div>
          {% endif %}
          <div>
            {% if block.settings.title != blank %}
            <h3 class="h4">
              {% if block.settings.link != blank %}<a href="block.settings.link">{% endif %}
               {{ block.settings.title }} 
              {% if block.settings.link != blank %}</a>{% endif %}
            </h3>
            {% endif %}
            {% if block.settings.desc != blank %}
            <div class="p-large">{{  block.settings.desc }}</div>
            {% endif %}
          </div>
      </div>
      {% endfor %}
    </div>
    </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Our Circular Yarn",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Circular"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title",
       "default": "Yarn"
    }
  ],
  "blocks": [
    {
      "type": "Block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner",
          "label": "Banner"
        },
        {
          "type":"select",
          "id": "icons",
          "label": "Icon",
          "default": "recycled-nylon",
          "options":[
              {
                "value": "recycled-nylon",
                "label": "recycled-nylon"
              },
              {
                "value": "recycled-spandex",
                "label": "recycled-spandex"
              },
              {
                "value": "recycled-polyester",
                "label": "recycled-polyester"
              },
              {
                "value": "cotton",
                "label": "cotton"
              }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "desc"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}