
<div class="block-radical block-radical-journey" >
    <div class="page-width">
        <div class="block-radical-items">
            <div class="grid d-flex d-flex-center">
                {% if section.blocks.size > 0 %}
                    {% for block in section.blocks %}
                        <div class="item grid__item col-4 col-md-4 col-small-3">
                            {% if block.settings.banner != blank %}
                                <div class="img-banner slide-up">
                                    <img  class="lazyload" data-src="{{ block.settings.banner | img_url:'317x500' }}" src="{{ block.settings.banner | img_url:'2x' }}" alt="{{ block.settings.banner.alt }}">
                                </div>
                            {% endif %}
                            <div class="item-info">
                                {% if block.settings.title != blank %}
                                    <h3 class="h7 slide-up">{{ block.settings.title }}</h3>
                                {% endif %}
                                {% if block.settings.link != blank %}
                                <a href="{{block.settings.link}}" class="btn_light slide-up">
                                    {{ block.settings.link_label | default: 'learn more' }}
                                </a>
                                {% endif %} 
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% schema %}
{
  "name": "Static block",
  "class": "traceable-transparent_block03",
  "blocks": [
    {
      "type": "Block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner",
          "label": "Banner"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}