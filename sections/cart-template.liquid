<div class="page-width" data-section-id="{{ section.id }}" data-section-type="cart-template" data-ajax-enabled="{{ section.settings.cart_ajax_enable }}">
    <div class="cart-popup__header">
        <h2 id="CartPopupHeading" class="cart-popup__heading h4">{{ 'cart.popup.added_to_cart' | t }}</h2> 
        <span class="count-item" >
            <span data-cart-count-popup>{{ cart.item_count}} </span> 
            <span data-cart-count-label>{% if cart.item_count == 1 %}{{ 'cart.popup.item' | t }} {% else %} {{ 'cart.popup.items' | t }} {% endif %}</span>
        </span>
        <button class="cart-popup__close" aria-label="{{ 'general.accessibility.close_modal' | t }}" data-cart-popup-close><span class="icon-close"></span></button>
    </div>
    {% include 'cart-table' %}
</div>

