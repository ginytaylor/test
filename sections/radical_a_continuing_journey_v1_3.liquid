<div class="block-radical block-radical-journey block-sustainable-from">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="h1 col-5 col-md-5 slide-up">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    <div class="block-radical-items">
      <div class="grid">
          
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        <div class="item grid__item col-3 col-md-4 col-small-3 ">
            {% if block.settings.banner != blank %}
            <div class="img-banner slide-up ">
              {% if block.settings.link != blank %}<a href="block.settings.link">{% endif %}
                <picture>
                    <source media="(min-width:1025px)" srcset="{{ block.settings.banner | img_url:'317x500' , crop: 'right'  }}">

                    {% if block.settings.drop_img == false %}
                    <source media="(min-width:600px) and (max-width: 1024px)" srcset="{{ block.settings.banner | img_url:'337x532' , crop: 'right'  }}">
                    <source media="(max-width:599px)" srcset="{{ block.settings.banner | img_url:'169x267' , crop: 'right'  }}">
                    {% else %}
                     <source media="(min-width:600px) and (max-width: 1024px)" srcset="{{ block.settings.banner | img_url:'698x532' , crop: 'right'  }}">
                    <source media="(max-width:599px)" srcset="{{ block.settings.banner | img_url:'344x256' , crop: 'right'  }}">
                    {% endif %}  
                    <img  class="lazyload" data-src="{{ block.settings.banner | img_url:'317x500' , crop: 'right'  }}" src="{{ block.settings.banner | img_url:'2x' }}" alt="{{ block.settings.banner.alt }}">
            
                </picture>
                
               {% if block.settings.link != blank %}</a>{% endif %} 
            </div>
            {% endif %}
            <div class="item-info slide-up">
            {% if block.settings.title != blank %}
            <h3 class="h4">
              {{ block.settings.title }}
            </h3>
            {% endif %}
            {% if block.settings.desc != blank %}
            <div class="p-large">
              {{ block.settings.desc }} 
            </div>
            {% endif %}
            {% if block.settings.link != blank %}
              <a href="block.settings.link" class="btn_light">
              {{ block.settings.link_label | default: 'learn more about our plan' }}
              </a>
            {% endif %} 
          </div>
        </div>
        {% endfor %}
    
      {% endif %}
      {% if section.settings.main_banner != blank %}
            <div class="grid__item col-6 slide-up">
              <div class="item-info">
                {% if section.settings.sub_title != blank %}
                <h3 class="h4">{{ section.settings.sub_title }}</h3>
                {% endif %}
                {% if section.settings.short_description != blank %}
                    <div class="p-large slide-up">{{ section.settings.short_description }}</div>    
                {% endif %}
              </div>
              <div class="img-banner slide-up">
                  {{ section.settings.main_banner }}
              </div>
            </div>
          {% endif %}
    </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "sustainable from within",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "sustainable from within"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub tile",
      "default": "Asia proximity sourcing"
    },
    {
      "type": "richtext",
      "id": "short_description",
      "label": "Short Description" ,
      "default": "<p>Fashion is notorious in transporting materials around the globe to keep costs low. We designed our supply chain to concentrate all our material supply within a concentrated region of Asia to lower our impact.</p>"
    },
    {
        "type": "html",
        "id": "main_banner",
        "label": "Map"
      }
  ],
  "blocks": [
    {
      "type": "Block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner",
          "label": "Banner"
        },
        {
          "type": "checkbox",
          "id": "drop_img",
          "label": "Drop img"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Short Description"
        }
      ]
    }
  ]
}
{% endschema %}