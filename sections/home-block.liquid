<div class="page-width">
  <div class="grid">
  {% if section.settings.title != blank or section.settings.subtitle != blank %}
    <div class="grid__item col-6 col-md-2 col-small-6">
      {% if section.settings.title != blank %}
      <h2 class="h2">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
      <h3 class="h4">{{ section.settings.subtitle | escape }}</h3>
      {% endif %}
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    
      {% for block in section.blocks %}
        <div class="grid__item col-2 col-md-2 col-small-2 text-center">
            {% if block.settings.icon != blank %}
            <span class="{{ block.settings.icon }}"></span>
            {% endif %}
            {% if block.settings.title != blank %}
            <strong class="h2">{{ block.settings.title }}</strong>
            {% endif %}
            {% if block.settings.text != blank %}
            <p class="p-large">{{ block.settings.text }}</p>
            {% endif %}
        </div>
      {% endfor %}
     
  {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "100% éco fabrics",
  "class": "index-section index-home-block",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "100% éco fabrics"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub title",
      "default": "preserving planet resources"
    }
  ],
  "blocks": [
    {
      "type": "Block",
      "name": "Block",
      "settings": [
