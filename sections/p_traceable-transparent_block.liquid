    },
    {
        "type": "image_picker",
        "id": "mobile",
        "label": "Image"
    },
    {
        "type": "text",
        "id": "map_title",
        "label": "Map title"
    },
    {    
        "type": "richtext",
        "id": "desc_map",
        "label": "Map description"
    },
    {    
        "type": "html",
        "id": "map",
        "label": "Map"
    }
  ],
  "blocks": [
    {
      "type": "Block",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub title"
        }
      ]
    }
  ]
}
{% endschema %}