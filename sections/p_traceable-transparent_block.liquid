</div>
{% if section.settings.map_title != blank or section.settings.map != blank  or section.settings.desc_map  != blank  %}
<div class="block-radical block-radical-map">
    <div class="page-width">
        {% if section.settings.map_title != blank  or section.settings.desc_map != blank %}
            <div class="grid">
                
                {% if section.settings.map_title != blank  %}
                    <div class="grid__item col-7 col-md-4">
                        <div class="col-10">
                            <h2 class="h2 slide-up">{{ section.settings.map_title }}</h2>
                        </div>
                    </div>
                {% endif %}
                {% if section.settings.desc_map != blank  %}
                    <div class="grid__item col-5 col-md-4">
                        <div class="p-large slide-up">{{ section.settings.desc_map }}</div>
                    </div>
                {% endif %}
            </div>
        {% endif %}
        {% if section.settings.map != blank  %}
            <div class="cms-map slide-up">{{ section.settings.map }}</div>
        {% endif %}
    </div>
</div>
{% endif %}
{% if section.blocks.size > 0 %}
<div class="block-radical block-radical-progress">
    <div class="page-width">
        <div class="grid">
            <div class="grid__item col-8 col-md-6">
                <div class="grid d-flex d-flex-center">
                {% for block in section.blocks %}
                    <div class="grid__item col-3 col-md-3-ex">
                        <div class="score slide-up">
                            <div class="core-text">
                                {% if block.settings.title != blank %}
                                    <strong class="h3" data-score="{{ block.settings.title }}">{{ block.settings.title }}% </strong>
                                {% endif %}
                                {% if block.settings.subtitle != blank %}
                                <p class="h4">{{ block.settings.subtitle }} </p>
                                {% endif %}
                            </div>
                            <svg viewBox="0 0 36 36" class="circular">
                                <path class="circle-bg" d="M18 2.0845
                                  a 15.9155 15.9155 0 0 1 0 31.831
                                  a 15.9155 15.9155 0 0 1 0 -31.831"></path>
                              <path class="circle" stroke-dasharray="{{ block.settings.title }}, 100" d="M18 2.0845
                                  a 15.9155 15.9155 0 0 1 0 31.831
                                  a 15.9155 15.9155 0 0 1 0 -31.831"></path>
                            </svg>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
            <div class="grid__item col-4 col-md-2">
                <h2 class="slide-up">our traceability progress</h2>
            </div>
        </div>
    </div>

</div>    
<div id="traceable-transparent-factories">&nbsp;</div>    
{% endif %}

