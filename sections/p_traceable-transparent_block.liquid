                {% endif %}
            </div>
            <div class="grid__item col-6 col-md-4">
                {% if section.settings.title_qr != blank %}
                <h2 class="h2 slide-up">{{ section.settings.title_qr }}</h2>
                {% endif %}
                {% if section.settings.sub_qr != blank or section.settings.desc %}
                    <div class="grid d-flex d-flex-right">
                        <div class="grid__item col-8">
                            {% if section.settings.sub_qr  %}
                            <h3 class="h3 slide-up">{{ section.settings.sub_qr }}</h3>
                            {% endif %}
                            {% if section.settings.desc  %}
                            <div class="p-large slide-up">{{ section.settings.desc }}</div>
