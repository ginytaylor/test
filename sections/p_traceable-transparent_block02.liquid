{% if section.settings.title != blank %}
<div class="block-radical block-radical-custom">
    <div class="page-width">
        <div class="custom-block-title col-7 col-md-6"><h2 class="h2">{{ section.settings.title }}</h2></div>
        <div class="grid d-flex d-flex-center">
            <div class="grid__item col-5 col-md-4">
                {% if section.settings.desc_first != blank %}
                    <div class="p-large slide-up">{{ section.settings.desc_first }}</div>
                {% endif %}
                {% if section.settings.button_label != blank  and section.settings.button_url != blank  %}
                <a href="{{ section.settings.button_url }}" class="btn_light slide-up" target="_blank">{{ section.settings.button_label }}</a>
                {% endif %}
            </div>
            <div class="grid__item col-5 col-md-4 slide-up">
                <div class="animation-block">
                    <div class="block1 block-an">
                        
                        <svg class="triangle" viewBox="0 0 100 100" fill="none">
                          <line class="" x1="50" y1="15" x2="100" y2="100" style="stroke-width:1"></line>
                          
                        </svg>
                    </div>
                     
                    <div class="block2 block-an">
                        <svg class="triangle" viewBox="0 0 100 100" fill="none">
                          
                          <line class="animateFirst animateFirst1" x1="0" y1="100" x2="50" y2="15"  style="stroke-width:1"></line>
                        </svg>
                       
                    </div>
                    
                    <div class="block3 block-an">
                    
                        <svg class="triangle" viewBox="0 0 100 100" fill="none">
                          <line class="animateFirst animateFirst2"  x1="100" y1="100" x2="0" y2="100" style="stroke-width:2"></line>
                        </svg>
                        
                    </div>
                    <strong class="h4 col-12 text-center">{{ 'general.pages.transparency' | t }}</strong>
                    <strong class="h4 col-6">{{ 'general.pages.social_responsibilities' | t }}</strong>
                    
                    <strong class="h4 col-6">{{ 'general.pages.environmental_responsibilities' | t }}</strong>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% comment %}
<div class="block-radical block-radical-journey">
    <div class="page-width">

        <div class="block-radical-items block-radical-items-score">
            <div class="grid d-flex d-flex-right">
                {% if section.settings.desc != blank %}
                <div class="grid__item col-5 col-md-6">
                    <div class="p-large slide-up">{{ section.settings.desc }}</div>
                </div> 
                {% endif %}
                <div class="grid__item col-6 text-center col-md-8">
                {% if section.blocks.size > 0 %}
                
                    <div class="grid">
                    {% for block in section.blocks %}
                        <div class="item grid__item col-4 col-md-2 col-small-2">
                            {% if block.settings.title != blank %}
                                <strong class="h1 slide-up" data-score="{{ block.settings.title }}">{{ block.settings.title }}</strong>
                            {% endif %}
                            {% if block.settings.subtitle != blank %}
                                <p class="p-medium slide-up">{{ block.settings.subtitle }}</p>
                            {% endif %} 
                        </div>
                    {% endfor %}
                    {% if section.settings.icon != blank %}
                        <div class="text-center bottom-logo col-12 col-md-2  grid__item ">
                            <div class="img slide-up">
                                <picture>
                                  <source media="(min-width:1025px)" srcset="{{ 'logo-d.png' | asset_url }}">
                                  <source media="(min-width:600px) and (max-width: 1024px)" srcset="{{ 'logo_t.jpg' | asset_url }}">
                                  <source media="(max-width:599px)" srcset="{{ 'logo_t.jpg' | asset_url }}">
                                  <img  class="lazyload" data-src="{{ 'logo-d.png' | asset_url }}" src="{{ 'logo-d.png' | asset_url }}" alt="">
                                </picture>
                            </div>
                            <div class="hide grid">
                                <div class="grid__item col-small-3 text-center slide-up">
                                    <img  class="lazyload" data-src="{{ 'logo-l.png' | asset_url }}" src="{{ 'logo-d.png' | asset_url }}" alt="">
                                </div>
                                <div class="grid__item col-small-3 text-center slide-up">
                                    <img  class="lazyload" data-src="{{ 'logo-r.png' | asset_url }}" src="{{ 'logo-d.png' | asset_url }}" alt="">
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    </div>
                    
                {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endcomment %}
{% schema %}
{
  "name": "Static block",
  "class": "traceable-transparent_block02",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Title"
    },
    {
        "type": "richtext",
        "id": "desc_first",
        "label": "Description"
    },
    {
        "type": "richtext",
        "id": "desc",
        "label": "Description"
    },
    {
        "type": "image_picker",
        "id": "icon",
        "label": "Icon"
    },
    {
        "type": "image_picker",
        "id": "iconmobile",
        "label": "Icon mobile"
    },
    {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
    },
    {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
    }
  ],
  "blocks": [
    {
      "type": "Block",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub title"
        }
      ]
    }
  ]
}
{% endschema %}