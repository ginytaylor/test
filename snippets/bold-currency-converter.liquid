{% assign mc_base_url = 'https://mc.boldapps.net/' %}
{% assign mc_shopDomain_url = mc_base_url | append: shop.permanent_domain %}
<script>
    // ensure these are available to the global window, for use in the bootstrap js asset
    window.BOLD_mc_bootstrapSettings = {
        shopDomainUrl: '{{ mc_shopDomain_url }}',
        flagsAssetUrl: '{% comment %}ly_asset_replace_for_[ 'flags.min.css' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'flags.min.css' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}',
        pickerCssAssetUrl: '{% comment %}ly_asset_replace_for_[ 'bold-currency-picker.css' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'bold-currency-picker.css' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}',
        productOriginalPrice: {{ product.price | default: '' | json }}
    };
</script>
<script src="{{ mc_base_url | append: 'install_assets/bold.multicurrency.js' }}" defer></script>
<script src="{% comment %}ly_asset_replace_for_[ 'bold-currency-bootstrap.js' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'bold-currency-bootstrap.js' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" defer></script>

