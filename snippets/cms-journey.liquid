<div class="page-width">
    <div class="block-radical-items">
      <div class="grid">
    {% if section.blocks.size > 0 %}
    
        {% if section.settings.title != blank %}
        <div class="grid__item col-3 ">
          <h2 class="h2 col-md-3 slide-up">
              {{ section.settings.title }}
          </h2>
        </div>
      {% endif %}
      {% for block in section.blocks %}
      <div class="item grid__item col-3 col-md-2 slide-up">
          {% if block.settings.banner != blank %}
          <div class="img-banner slide-up">
            {% if block.settings.link != blank %}<a href="block.settings.link">{% endif %}
              {% if tpl == 'v1_2' %}
                {% if forloop.index ==  1 %}
                <picture>
                    <source media="(min-width:1025px)" srcset="{{  block.settings.banner | img_url:'317x500' }}">
                    <source media="(min-width:600px) and (max-width: 1024px)" srcset="{{  block.settings.banner | img_url:'155x244' ,crop: 'center'}}">
                    <source media="(max-width:599px)" srcset="{{  block.settings.banner | img_url:'317x500' }}">
                    <img  class="lazyload" data-src="{{  block.settings.banner | img_url:'317x500' }}" src="{{ block.settings.banner | img_url:'2x' }}" alt="{{ block.settings.banner.alt }}">
                </picture>
                {% else %}
                <picture>
                    <source media="(min-width:1025px)" srcset="{{  block.settings.banner | img_url:'317x500' }}">
                    <source media="(min-width:600px) and (max-width: 1024px)" srcset="{{  block.settings.banner | img_url:'246x244',crop: 'center' }}">
                    <source media="(max-width:599px)" srcset="{{  block.settings.banner | img_url:'317x500' }}">
                    <img  class="lazyload" data-src="{{  block.settings.banner | img_url:'317x500' }}" src="{{ block.settings.banner | img_url:'2x' }}" alt="{{ block.settings.banner.alt }}">
                </picture>
                {% endif %}
              {% else %}
                <img  class="lazyload" data-src="{{ block.settings.banner | img_url:'317x500' }}" src="{{ block.settings.banner | img_url:'2x' }}" alt="{{ block.settings.banner.alt }}">
              {% endif %}
             {% if block.settings.link != blank %}</a>{% endif %} 
             {% if block.settings.title_over != blank or block.settings.sub_title_over %}
             <div class="block-over">
                {% if block.settings.title_over != blank %}
                <div class="h2">{{ block.settings.title_over }}</div>
                {% endif %}
                {% if block.settings.sub_title_over != blank %}
                <div class="h4">{{ block.settings.sub_title_over }}</div>
                {% endif %}
             </div>
             {% endif %}
          </div>
          {% endif %}
          <div class="item-info">
          {% if block.settings.title != blank %}
          <h3 class="h4 slide-up">
            {{ block.settings.title }}
          </h3>
          {% endif %}
          {% if block.settings.desc != blank %}
          <div class="p-large slide-up">
            {{ block.settings.desc }} 
          </div>
          {% endif %}
          {% if block.settings.link != blank %}
            <a href="{{block.settings.link}}" class="btn_light slide-up">
            {{ block.settings.link_label | default: 'learn more about our plan' }}
            </a>
          {% endif %} 
        </div>
      </div>
      {% endfor %}
    
    {% endif %}
    </div>
    </div>
  </div>